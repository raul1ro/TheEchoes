            </Button>
        </Frames>
        <Layers>
            <Layer>
                <FontString parentKey="Zone" inherits="TheEchoesFontWhite" justifyH="LEFT" wordwrap="false">
                    <Anchors><Anchor point="LEFT" relativeKey="$parent.Whisper" relativePoint="RIGHT" x="10"/></Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

