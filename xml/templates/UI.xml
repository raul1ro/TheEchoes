            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="Name" frameLevel="1003">
                <Layers>
                    <Layer level="ARTWORK" textureSubLevel="1">
                        <Texture parentKey="Icon">
                            <Size x="16" y="16"/>
